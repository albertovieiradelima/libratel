{% extends "site/layout.twig" %}
{% block content %}

<!-- Header Carousel -->
<header id="carousel_topo" class="carousel interno slide">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="fill" style="background-image:url('/assets/img/topo_sobre-a-abrasce.png');"></div>
            <div class="container title-page">
                <div class="carousel-caption carousel-internal">
                    <h1>Fale com Abrasce</h1>
                </div>
            </div>
        </div>
    </div>

</header>

<!-- Page Content -->
<div class="container">

    <div class="row row-navigator">
        <div class="col-md-12">
            <h5>Fale com Abrasce</h5>
        </div>
    </div>
    <div class="row row-container">

        <!--Beneficios do Associado-->
        <div class="col-xs-12 col-sm-12 col-md-12">
            <h3>Formulário para Contato</h3>
            <hr>
            <div class="box-fale-conosco">
                <form class="form-horizontal" id="formAboutus">
                    <div class="form-group">
                        <label for="area" class="col-sm-3 control-label">Área</label>

                        <div class="col-sm-9">
                            <select class="form-control" name="area">
                                <option value="">Selecione</option>
                                <option value="Administrativo/Financeiro">Administrativo/Financeiro</option>
                                <option value="Biblioteca">Biblioteca</option>
                                <option value="Currículos">Currículos</option>
                                <option value="Educação">Educação</option>
                                <option value="Geral">Geral</option>
                                <option value="Jurídica">Jurídica</option>
                                <option value="Marketing">Marketing</option>
                                <option value="Pesquisa">Pesquisa</option>
                                <option value="Relacionamento com o Shopping">Relacionamento com o Shopping</option>
                                <option value="Relacionamento com o Sócio Colaborador">Relacionamento com o Sócio Colaborador
                                </option>
                                <option value="Superintendência">Superintendência</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="subject" class="col-sm-3 control-label">Assunto</label>

                        <div class="col-sm-9">
                            <select class="form-control" name="subject">
                                <option value="">Selecione</option>
                                <option value="Como se associar a Abrasce">Como se associar a Abrasce</option>
                                <option value="Críticas">Críticas</option>
                                <option value="Cursos">Cursos</option>
                                <option value="Dúvidas">Dúvidas</option>
                                <option value="Eventos ABRASCE">Eventos ABRASCE</option>
                                <option value="Jurídico">Jurídico</option>
                                <option value="Outros">Outros</option>
                                <option value="Sugestões">Sugestões</option>
                                <option value="Venda de livros">Venda de livros</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Nome</label>

                        <div class="col-sm-9">
                            <input type="text" name="name" class="form-control" placeholder="Nome completo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-3 control-label">E-mail</label>

                        <div class="col-sm-9">
                            <input type="email" name="email" class="form-control" placeholder="E-mail para contato">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone" class="col-sm-3 control-label">Telefone</label>

                        <div class="col-sm-9">
                            <input type="phone" name="phone" class="form-control" placeholder="Telefone para contato">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="business" class="col-sm-3 control-label">Empresa</label>

                        <div class="col-sm-9">
                            <input type="text" name="business" class="form-control" placeholder="Empresa em que trabalha">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="job" class="col-sm-3 control-label">Cargo</label>

                        <div class="col-sm-9">
                            <select name="job" class="form-control">
                                {% for key,cargo in null|cargolist %}
                                <option value="{{ key }}"{{ key == id ? ' selected' : '' }}>{{ cargo }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cep" class="col-sm-3 control-label">CEP</label>

                        <div class="col-sm-9">
                            <input type="text" name="cep" id="CEP" class="form-control" placeholder="Cep">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="address" class="col-sm-3 control-label">Endereço</label>

                        <div class="col-sm-9">
                            <input type="text" name="address" id="address" class="form-control" placeholder="Endereço residencial">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="number" class="col-sm-3 control-label">Número</label>

                        <div class="col-sm-9">
                            <input type="text" name="number" id="number" class="form-control" placeholder="Número">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="complement" class="col-sm-3 control-label">Complemento</label>

                        <div class="col-sm-9">
                            <input type="text" name="complement" id="complement" class="form-control" placeholder="Informaçoes, ponto de referencia, etc...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="neighborhood" class="col-sm-3 control-label">Bairro</label>

                        <div class="col-sm-9">
                            <input type="text" name="neighborhood" id="neighborhood" class="form-control" placeholder="Bairro">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="city" class="col-sm-3 control-label">Cidade</label>

                        <div class="col-sm-9">
                            <input type="text" name="city" id="city" class="form-control" placeholder="Cidade">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="state" class="col-sm-3 control-label">Estado</label>

                        <div class="col-sm-9">
                            <select name="state" id="state" class="input-large form-control">
                                {% for key,uf in null|uflist %}
                                <option value="{{ key }}"{{ key == id ? ' selected' : '' }}>{{ uf }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message" class="col-sm-3 control-label">Mensagem</label>

                        <div class="col-sm-9">
                            <textarea name="message" id="message" class="form-control" rows="6"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-primary">Enviar Informações</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--end-->

</div>

</div>
<!-- /.container -->
<script>
    $(document).ready(function () {
        $(".navbar-btn button").removeClass('active');

        $('#CEP').blur(function () {
            if ($('#CEP').val() != '') {
                $('#CEP').addClass('ajax-loader');
                $.ajax({
                    type: "GET",
                    dataType: "json",
                    url: 'http://www.crmall.com.br/interface_crmall/appcrmall/php/enderecoPorCep.php?identificador=tqyG1HzR2Q&cep={' + $('#CEP').val() + '}',
                    success: function(data) {
                        $('#address').val(data['logradouro']);
                        $('#neighborhood').val(data['bairro']);
                        $('#city').val(data['cidade']);
                        $('#state').val(data['uf']);
                        $('#CEP').removeClass('ajax-loader');
                        $('#number').focus();
                    },
                    error: function() {
                        $('#CEP').removeClass('ajax-loader');
                    }
                });
            }
        });
    });
</script>

{% endblock %}