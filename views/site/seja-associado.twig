{% extends "site/layout.twig" %}
{% block content %}

<!-- Header Carousel -->
<header id="carousel_topo" class="carousel interno slide">

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <div class="fill" style="background-image:url('/assets/img/topo_associados.png');"></div>
            <div class="container title-page">
                <div class="carousel-caption carousel-internal">
                    <h1>Seja um Associado</h1>
                </div>
            </div>
        </div>
    </div>

</header>

<!-- Page Content -->
<div class="container">

    <div class="row row-navigator">
        <div class="col-md-12">
            <h5>Associados/Benefícios</h5>
        </div>
    </div>
    <div class="row row-container">

        <!--Seja um Associado-->
        <div class="col-md-8 container-seja-associado">
            <h3>SEJA UM ASSOCIADO</h3>
            <hr>
            <p class="description-page">
                Caso deseje se associar à ABRASCE - ASSOCIAÇÃO BRASILEIRA DE SHOPPINGS CENTERS, entre em contato com a
                área de Relacionamento com o associado:
            </p>
            <div class="box-container">
                <div class="box-noticia">
                    <p>
                        <strong>SHOPPING</strong>
                        <br>
                        <br>
                        <strong>Contatos:</strong>
                        <br>
                        <b>Flavia Cunha</b> - <a href="mailto:flaviacunha@abrasce.com.br">flaviacunha@abrasce.com.br</a>
                        <br>Fone: (11) 3506-8300
                        <br>
                        <br>
                        <b>Camila Munhoes</b> - <a href="mailto:camilamunhoes@abrasce.com.br">camilamunhoes@abrasce.com.br</a>
                        <br>Fone: (11) 3506-8300
                    </p>
                </div>
            </div>
            <div class="box-container">
                <div class="box-noticia">
                    <p>
                        <strong>EMPRESAS, FORNECEDORES, PRESTADORES DE SERVIÇOS E VAREJISTAS</strong>
                        <br>
                        <br>
                        <strong>Contatos:</strong>
                        <br>
                        <b>Ricardo Garcia</b> - <a href="mailto:ricardo.garcia@abrasce.com.br">ricardo.garcia@abrasce.com.br</a>
                        <br>Fone: (11) 3506-8326
                        <br>
                        <br>
                        <b>Luiz Calmon</b> - <a href="mailto:luiz.calmon@abrasce.com.br">luiz.calmon@abrasce.com.br</a>
                        <br>Fone: (11) 3506-8328
                    </p>
                </div>
            </div>
            <h3>Formulário para Associação</h3>
            <hr>
            <div class="box-noticia">
                <form class="form-horizontal" id="formAssociete">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Nome</label>

                        <div class="col-sm-9">
                            <input type="text" name="name" class="form-control" placeholder="Nome completo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-3 control-label">E-mail</label>

                        <div class="col-sm-9">
                            <input type="email" name="email" class="form-control" placeholder="E-mail para contato">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone" class="col-sm-3 control-label">Telefone</label>

                        <div class="col-sm-9">
                            <input type="text" name="phone" class="form-control" placeholder="Telefone">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="business" class="col-sm-3 control-label">Empresa</label>

                        <div class="col-sm-9">
                            <input type="text" name="business" class="form-control"
                                   placeholder="Empresa em que trabalha">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message" class="col-sm-3 control-label">Mensagem</label>

                        <div class="col-sm-9">
                            <textarea name="message" class="form-control" rows="6"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-primary">Enviar Informações</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--end-->

        <div class="col-md-4 col-right-margin-top-lg">
            <ul class="nav nav-pills nav-stacked abrasce-nav-list">
                <li class="abrasce-list link-beneficios active">
                    <a href="/site/associado/beneficios">
                        Benefícios do Associado
                    </a>
                </li>
                <li class="abrasce-list link-seja-associado">
                    <a href="/site/associado/seja-associado">
                        Seja um Associado
                    </a>
                </li>
            </ul>
        </div>
    </div>

</div>
<!-- /.container -->
<script>
    $(document).ready(function () {
        $("#menu-associados").addClass('active');

        $('.container-beneficios').addClass('hide');
        $('.container-seja-associado').removeClass('hide');

        $('.link-beneficios').removeClass('active');
        $('.link-seja-associado').addClass('active');

    });
</script>

