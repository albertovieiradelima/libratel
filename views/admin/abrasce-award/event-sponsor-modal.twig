<div class="modal fade" id="event-sponsor-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formEventSponsor" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Adicionar Patrocinadores ao Evento</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" class="form-control">
                    <input type="hidden" name="fk_event" class="form-control">
                    <div class="form-group">
                        <label for="fk_sponsor">Patrocinador</label>
                        <select required class="form-control" name="fk_sponsor" id="fk_sponsor"></select>
                    </div>
                    <div class="form-group">
                        <label for="fk_sponsor_category">Categoria</label>
                        <select required class="form-control" name="fk_sponsor_category" id="fk_sponsor_category"></select>
                    </div>
                    <div class="form-group">
                        <label for="order">Ordem</label>
                        <select class="form-control" name="order" id="order"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-danger pull-left">
                        <i class="fa fa-times"></i> Descartar
                    </button>
                    <button type="submit" name="submit" class="btn btn-primary">
                        <i class="fa fa-check"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>