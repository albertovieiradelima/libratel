<div class="modal fade" id="award-field-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="formAwardField" method="post" novalidate="novalidate" class="form-validate">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Cadastro Campos do Projeto</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" class="form-control">
                    <input type="hidden" name="fk_award" class="form-control">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="Tipo">Tipo</label>
                            <select required class="form-control" name="type" id="type">
                                <option>---</option>
                                <option value="text">Texto Curto</option>
                                <option value="textarea">Texto Longo</option>
                                <option value="file">Arquivo</option>
                            </select>
                        </div>
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label for="title">Título</label>
                            <input required type="text" name="title" class="form-control" />
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label for="weight">Peso</label>
                            <input required type="text" name="weight" class="form-control mask-decimal" />
                        </div>
                    </div>
                    <div class="form-group">
                        <!--//condition file-->
                        <div class="col-lg-6 accept-text" style="padding-left: 0px;">
                            <label for="maxlength">Quantidade de caracteres</label>
                            <input required type="text" name="maxlength" class="form-control mask-number" maxlength="5"/>
                        </div>
                        <div class="col-lg-6 accept-filetypes" style="padding-left: 0px;">
                            <label for="accept_filetypes">Tipos de Arquivos (ex.: png,jpg,gif)</label>
                            <input type="text" name="accept_filetypes" class="form-control" />
                        </div>

                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label for="order">Ordem</label>
                            <input required type="text" name="order" class="form-control mask-number" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description">Descrição</label>
                        <textarea class="textarea form-control" name="description" 
                                  id="description" placeholder="Insira o texto ..." style="width: 100%; height: 200px"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-danger pull-left"><i class="fa fa-times"></i> Descartar</button>
                    <button type="submit" name="submit" class="btn btn-primary"><i class="fa fa-check"></i>  Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>
