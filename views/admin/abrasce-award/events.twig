{% extends "admin/layout.twig" %}
{% block content %}
<section class="content-header">
    <h1>
        {{ navigate }}
        <small>Painel de controle</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/admin"><i class="fa fa-cogs"></i> Admin</a>
        </li>
        <li>
            <i class="fa fa-trophy"></i> Prêmio ABRASCE
        </li>
        <li>Eventos</li>
        <li class="active">{{ navigate }}</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-6" style="text-align: left; margin-bottom: 10px;">
            <button type="button" class="btn btn-success new" data-toggle="modal" data-target="#event-modal">
                <i class="fa fa-plus"></i> Novo
            </button>
            <button type="button" class="btn btn-primary edit" data-toggle="modal">
                <i class="fa fa-pencil"></i> Alterar
            </button>
            <button type="button" class="btn btn-danger remove" data-toggle="modal">
                <i class="fa fa-times"></i> Remover
            </button>
            |
            <button type="button" class="btn btn-info edit-sponsors" data-toggle="modal">
                <i class="fa fa-list-alt"></i> Patrocinadores
            </button>
        </div>
        <div class="col-lg-6" style="text-align: right; margin-bottom: 10px;">
            <div class="info-datatable"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <table id="registers" class="table table-hover table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr role="row">
                                <th tabindex="0" aria-label="Código: activate to sort column ascending" style="width: 100px;">
                                    Código
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="registers" rowspan="1" colspan="1" aria-label="Título activate to sort column ascending" aria-sort="ascending">
                                    Título
                                </th>
                                <th tabindex="0" aria-label="Sigla: activate to sort column">
                                    Ano
                                </th>
                                <th tabindex="0" aria-label="Data Inicial: activate to sort column">
                                    Data Inicial
                                </th>
                                <th tabindex="0" aria-label="Data Final: activate to sort column">
                                    Data Final
                                </th>
                                <th tabindex="0" aria-label="Opções: activate to sort column">
                                    Opções
                                </th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Código</th>
                                <th>Título</th>
                                <th>Ano</th>
                                <th>Data Inicial</th>
                                <th>Data Final</th>
                                <th>Opções</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% include modal ignore missing %}

{% include "admin/abrasce-award/award-event-modal.twig" ignore missing %}

{% endblock %}

{% block header_page %}
<script type="text/javascript" src="/assets/js/admin/abrasce-award/event.js"></script>
<script type="text/javascript" src="/assets/js/admin/abrasce-award/award-event.js"></script>
{% endblock %}