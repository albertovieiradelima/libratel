{% extends "admin/layout.twig" %}
{% block content %}
<section class="content-header">
    <h1>
        {{ navigate }}
        <small>Painel de controle</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/admin"><i class="fa fa-cogs"></i> Admin</a>
        </li>
        <li>
            <i class="fa fa-calendar"></i> Cursos / Eventos</a>
        </li>
        <li class="active">{{ navigate }}</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-8" style="text-align: left; margin-bottom: 10px;">
            <button type="button" class="btn btn-primary edit" data-toggle="modal">
                <i class="fa fa-pencil"></i> Alterar
            </button>
            <span>|</span>
            <span>
                Alterar Curso/Evento:
                <select id='select-event' class="form-control select2" style="width: auto;min-width: 250px;">
                    {% for obj in events %}
                    <option value='{{obj.id}}'>{{obj.title}}</option>
                    {% endfor %}
                </select>
            </span>
        </div>
        <div class="col-lg-4" style="text-align: right; margin-bottom: 10px;">
            <div class="info-datatable"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-body">
                    <table id="registers" class="table table-hover table-bordered" cellspacing="0" width="100%">
                        <thead>
                        <tr role="row">
                            <th tabindex="0" aria-label="Código: activate to sort column ascending">
                                Código
                            </th>
                            <th class="sorting" tabindex="0" aria-controls="registers" aria-label="Nome (Crachá): activate to sort column ascending" aria-sort="ascending">
                                Nome (Crachá)
                            </th>
                            <th tabindex="0" aria-label="Empresa (Crachá): activate to sort column">
                                Empresa (Crachá)
                            </th>
                            <th tabindex="0" aria-label="Cargo: activate to sort column">
                                Cargo
                            </th>
                            <th tabindex="0" aria-label="Área: activate to sort column">
                                Área
                            </th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Código</th>
                            <th>Nome (Crachá)</th>
                            <th>Empresa (Crachá)</th>
                            <th>Cargo</th>
                            <th>Área</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% include modal ignore missing %}
{% endblock %}

{% block header_page %}
<script>
    _eventID = {{event.id}};
</script>
<script type="text/javascript" src="/assets/js/admin/event-registration-participants.js"></script>
{% endblock %}