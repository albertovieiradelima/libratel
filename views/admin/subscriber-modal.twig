<style type="text/css">
.col-lg-6 {
    margin-bottom: 15px;
}
</style>
<div class="modal fade" id="subscriber-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="formSubscriber" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Pedido de Incrição</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" class="form-control">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="title">Cursos / Eventos</label>
                            <input type="hidden" name="fk_event" id="fk_event" class="form-control">
                        </div>
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label for="name">Nome</label>
                            <input type="text" name="name" class="form-control">
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label for="email">E-mail</label>
                            <input type="email" name="email" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label for="cpf">Cpf</label>
                            <input type="text" name="cpf" class="form-control">
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label for="phone">Telefone</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <input type="text" class="form-control" data-inputmask='"mask": "(99) 99999-9999"' data-mask name="phone" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label for="job">Cargo</label>
                            <select name="job" id="job" class="form-control">
                                {% for key,cargo in null|cargolist %}
                                    <option value="{{ key }}">{{ cargo }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label for="business">Empresa</label>
                            <input type="text" name="business" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" name="status" class="minimal" checked/> Inscrito
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-danger pull-left"><i class="fa fa-times"></i> Descartar</button>
                    <button type="submit" name="submit" class="btn btn-primary"><i class="fa fa-check"></i>  Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>
