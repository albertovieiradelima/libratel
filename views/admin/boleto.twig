{% extends "admin/layout.twig" %}
{% block content %}
<section class="content-header">
    <h1>
        {{ navigate }}
        <small>Configurações do Boleto</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/admin"><i class="fa fa-cogs"></i> Admin</a>
        </li>
        <li class="active">{{ navigate }}</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-6" style="text-align: left; margin-bottom: 10px;">
            <button type="button" class="btn btn-success new disabled" data-toggle="modal" data-target="#smtp-modal">
                <i class="fa fa-plus"></i> Novo
            </button>
            <button type="button" class="btn btn-primary edit" data-toggle="modal">
                <i class="fa fa-pencil"></i> Alterar
            </button>
            <button type="button" class="btn btn-danger remove disabled" data-toggle="modal">
                <i class="fa fa-times"></i> Remover
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
        </div>
    </div>
</section>
{% include modal ignore missing %}
{% endblock %}

{% block header_page %}
<script>
    $(function() {
        $('.edit').click();
    });
</script>
<script type="text/javascript" src="/assets/js/admin/boleto.js"></script>
{% endblock %}