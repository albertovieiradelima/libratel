<style type="text/css">
.col-lg-8, .col-lg-6, .col-lg-2 {
    margin-bottom: 15px;
}
</style>
<div class="modal fade" id="course-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="formCourse" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Cadastro de Curso</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" class="form-control">
                    <div class="form-group">
                        <label for="title">Título</label>
                        <input type="text" name="title" class="form-control" placeholder="Título do Curso">
                    </div>
                    <div class="form-group file">
                        <label for="image">Imagem</label>
                        <input id="file" name="image" type="file" multiple=true class="file" data-show-upload="false" data-preview-file-type="any" data-initial-caption="" data-overwrite-initial="false">
                    </div>
                    <div class="form-group">
                        <label for="description">Descrição</label>
                        <textarea class="textarea form-control" name="description" id="description" placeholder="Insira o texto ..." style="width: 100%; height: 200px"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label for="date">Data</label>
                            <div class="input-group input-daterange">
                                <div class="input-group-addon" style="padding: 6px 12px;border-left: 1px solid #ccc;">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="start_date" />
                                <span class="input-group-addon">a</span>
                                <input type="text" class="form-control" name="end_date" />
                            </div>
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <div class="bootstrap-timepicker" style="width: 200px;float: left;">
                                <label>Hora:</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    <input type="text" name="starthour" class="form-control starthour" />
                                </div>
                            </div>
                            <div class="bootstrap-timepicker" style="margin-top: 25px;">
                                <div class="input-group">
                                    <span class="input-group-addon" style="padding: 4px 5px;border-left: 0px;">a</span>
                                    <input type="text" name="endhour" class="form-control endhour" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label for="local">Local</label>
                            <input type="text" name="local" class="form-control" placeholder="Local">
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label for="site">Site</label>
                            <input type="text" name="site" class="form-control" placeholder="Site">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label for="number_vacancies">Número de vagas</label>
                            <input type="text" name="number_vacancies" class="form-control" placeholder="Número de vagas">
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label for="days_invoice">Dias para vencimento do boleto</label>
                            <input type="text" name="days_invoice" class="form-control" placeholder="Dias para vencimento">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="cancellation_policy">Política de cancelamento</label>
                        <textarea class="textarea form-control" name="cancellation_policy" id="cancellation_policy" placeholder="Insira o texto ..." style="width: 100%; height: 200px"></textarea>
                    </div>
                    <div class="form-group" style="margin-bottom: 80px;">
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label>
                                <input type="checkbox" name="exclusive_associated" class="minimal"/> Exclusivo para associados
                            </label>
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label>
                                <input type="checkbox" name="inscription" class="minimal"/> Permitir inscrições
                            </label>
                        </div>
                        <div class="col-lg-6" style="padding-left: 0px;">
                            <label>
                                <input type="checkbox" name="free_event" class="minimal"/> Evento gratuito
                            </label>
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <label>
                                <input type="checkbox" name="status" class="minimal"/> Ativo
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-danger pull-left"><i class="fa fa-times"></i> Descartar</button>
                    <button type="submit" name="submit" class="btn btn-primary"><i class="fa fa-check"></i>  Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>
